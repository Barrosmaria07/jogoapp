<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jogoapp.MainPage">

  <Grid>
    <Image Source = "capadojogo"
     Aspect="AspectFill"/>

    <VerticalStackLayout
     VerticalOptions="End"
     Spacing="10"
     Margin="15,0,15,40"/>

 
    <Button Text="Começar🐾"
            Clicked="StartButton_comecar"
            BorderColor="White"
            BorderWidth="1"
            Margin="2, 430, 2, 0"
            HeightRequest="50"
            CornerRadius="30"
            BackgroundColor="#bd9d6a"
            TextColor="#e6e2d1"
            FontSize="19"/>

         <Button Text="Sobre🐾"
                 Clicked="StartButton_sobre"
                 BorderColor="White"
                 BorderWidth="1"
                 Margin="2, 550, 0, 2"
                 HeightRequest="50"
                 CornerRadius="40"
                 BackgroundColor="#bd9d6a"
                 FontSize="19"/>






</Grid>
</ContentPage>
