<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jogoapp.GameOverPage">



  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="60"/>
      <RowDefinition Height="60"/>
    </Grid.RowDefinitions>

    <Image Source = "gameover.png"
           Aspect="AspectFill"
           Grid.Row="0"
           Grid.RowSpan="3"/>
       
    
    <Button Text="Voltar🐾"
            Clicked="StartButton_voltar"
            BorderColor="White"
            BorderWidth="1"
            HeightRequest="50"
            CornerRadius="25"
            BackgroundColor="#bd9d6a"
            TextColor="white"
            Margin="0,0,0,20"
            FontSize="18"
            FontFamily="fonte"
            Grid.Row="1"/>




      </Grid>
</ContentPage>